/* home css text*/
*{margin:0;padding:0}
body{
	min-width:1000px;
	background:rgb(19,19,19);
}

#load{
	position:relative;
	width:100%;
	height:670px;
	background:url('../img/home/home-bg.jpg') no-repeat;
	background-position: -310px -310px;
	overflow:hidden;
}
#load #logo{
	position:absolute;
	left:-100px;
	top:80px;
	opacity:0;
}

#load #logo ul ol{
	margin-top:35px;
}
#load #logo ul ol h1{
	margin-left:-35px;
	font-size:50px;
	color:#ffffff;
	font-family:'Microsoft YaHei';
}
#load #black li{
	position:absolute;
	width:100%;
	list-style:none;
	background-color:#000000;
}
#load #black li.black1 img{
	float:right;
	margin:50px 20px 0 0;
}
#load #black li.black1.clearfix:after{
	content: '';
	display: block;
	height: 0;
	line-height: 0;
	visibility: hidden;
	clear: both;
}
#load #black li.black4 img{
	float:left;
	margin:50px 0 0 20px;
}
#load #black li.black4.clearfix:after{
	content: '';
	display: block;
	height: 0;
	line-height: 0;
	visibility: hidden;
	clear: both;
}
#load #enter-btn{
	position:relative;
	top:520px;
	left:557px;
	width:250px;
	height:100px;
	opacity:0;
	z-index:999;
}
#load #enter-btn p{
	position:absolute;
	top:28px;
	left:66px;
	font-size:30px;
	font-family:'Microsoft YaHei';
	display:block;
	width:100%;
	height:100%;
	text-decoration:none;
	color:#ffffff;
}
#load #enter-btn .clickhand{
	display:block;
	position:absolute;
	top:60px;
	left:155px;
	width:50px;
	height:50px;
	background:url('../img/home/clickhand.png');
	background-size:100% 100%;
	z-inex:9;
	animation: handmove .5s linear infinite alternate;
}
#load #enter-btn:hover p{
	top:23px;
	cursor:pointer;
}
#load #enter-btn:hover .clickhand{
	display:none;
}
#load #qrcode{
	position:absolute;
	top:140px;
	right:-200px;
	width:200px;
	height:150px;
	background:rgba(7,7,7,1);
	border-top-left-radius:10px;
	border-bottom-left-radius:10px;
}
#load #qrcode h1{
	float:left;
	margin:0 10px;
	color:#ffffff;
	font-size:25px;
	width:20px;
	height:100%;
	cursor:pointer;
}
#load #qrcode h1 img{
	margin-right:-13px;
	width:40px;
	height:40px;
}
#load #qrcode.clearfix:after{
	content: '';
	display: block;
	height: 0;
	line-height: 0;
	visibility: hidden;
	clear: both;
}
#load #qrcode img{
	float:right;
	margin:3px 3px;
	width:140px;
	height:140px;
}

/* 导航 */
.container{
	width:1000px;
	margin:0 auto;
}
.clearfix:after{
	content: '';
	display: block;
	height: 0;
	line-height: 0;
	visibility: hidden;
	clear: both;
}
#index,#project,#share,#contact{
	display:none;
	width:100%;
	height:670px;
}
#header{
	display:none;
	position:fixed;
	width:100%;
	height:90px;
	background:rgba(0,0,0,0.5);
	z-index:9999999;
}
#header .logo{
	float:left;
	padding:7px 0 0 60px;
	width:150px;
	height:100%;
}
#header .logo img{
	width:100%;
	height:100%;
}
#header .nav{
	float:right;
	width:690px;
	line-height:90px;
}
#header .nav ul ol{
	float:left;
	width:80px;
	padding:0 45px 0 45px;
}
#header .nav ul ol p{
	display:block;
	width:100%;
	height:100%;
	color:#ffffff;
}
#header .nav ul ol:hover p{
	font-size:18px;
	font-weight:bold;
	color:rgba(94,151,191,1);
	cursor:pointer;
}

/*  轮播  */
#index .banner{
	position:relative;
	left:0;
	top:90px;
	width:100%;
	height:510px;
}
#index .banner .b-main{
	width:100%;
	height:100%;
	overflow:hidden;
}
#index .banner .b-main ul ol a img{
	width:100%;
	height:100%;
}
#index .banner .b-tab{
	position:absolute;
	bottom:-35px;
	left:635px;
	width:100px;
	z-index:99;
}
#index .banner .b-tab ol{
	float:left;
	list-style:none;
	margin-right:5px;
	width:20px;
	height:8px;
	border-radius:7px;
	background:rgba(0,0,0,0.5);
	cursor:pointer;
}
#index .banner .b-tab ol.on{
	width:40px;
	background:#fff;
}

/*  实战项目 */

#project{
	display:none;
	position:relative;
	left:0;
	top:90px;
	width:100%;
	height:510px;
}
#project .main{
    position: relative;
	top:90px;
    width: 1130px;
    height: 90%;
    margin: 0 auto ;
}
#project .pic{
    position: relative;
    width: 936px;
    height: 439px;
    margin: auto;
    transform-style: preserve-3d;
}
#project .pic ul{
    width: 774px;
    height: 438px;
    perspective: 800px;
}
#project .pic ul li{
    position: absolute;
    top: 0;
    left: 80px;
	list-style:none;
    width: 774px;
    height: 438px;
    background: #000;
	border:5px solid #ffffff;
	opacity: 0.5;
    transform:translate3D(0px,0px,-233px) rotateY(0deg) ;
    transition:transform .5s;
}
#project .pic ul li a img{
	width:100%;
	height:100%;
}
#project .pic ul li.mid{
    opacity: 1;
}
#project .pic ul li.left{
    transform:translate3D(-196px,0px,-302px) rotateY(30deg);
    z-index: 2;
}
#project .pic ul li.mid{
    transform:translate3D(0,0,0px) rotateY(0deg);
    z-index: 3;
}
#project .pic ul li.right{
    transform:translate3D(196px,0px,-302px) rotateY(-30deg);
    z-index: 1;
}
#project .btn p{
    position: absolute;
    top: 50%;
    margin-top: -41px;
    width: 42px;
    height: 82px;
    cursor: pointer;
}
#project .btn p.left{
    left: 0;
    background-image: url("../img/project/left.png");
}
#project .btn p.right{
    right: 0;
    background-image: url("../img/project/right.png");
}

/* 学习分享 */
#share{
	/*display:none;*/
	position:relative;
	left:0;
	top:90px;
	width:100%;
	height:510px;
}
#share .box{
	position:absolute;
	top:20px;
	left:250px;
	width:80%;
}
#share .box ul li{
	float:left;
	list-style:none;
	margin-right:150px;
}
#share .box ul li a{
	color:#ffffff;
	text-decoration:none;
}
#share .box ul li div{
	width:200px;
	height:200px;
	border:2px solid #fff;
	border-top-left-radius:20px;
	border-bottom-right-radius:20px;
}
#share .box ul li.pa1 div{
	background:url('../img/share/pa1.jpg');
	background-position:-30px -30px;
}
#share .box ul li.pa2 div{
	background:url('../img/share/pa2.png');
}
#share .box ul li.pa3 div{
	background:url('../img/share/pa3.png');
}
#share .box ul li.pa4 div{
	background:url('../img/share/pa4.png');
}
#share .box ul li.pa5 div{
	background:url('../img/share/pa5.jpg');
	background-position:-40px -40px;
}
#share .box ul li:hover{
	position:relative;
	top:-5px;
	left:-5px;
	z-index:999;
	transition:.5s;
}
#share .box ul li:hover div{
	border:2px solid #0359a9;
	box-shadow:5px 5px 5px #ccc;
	transition:.5s;
}
#share .box ul li:hover p{
	background:#0359a9;
	color:#fff;
	border-radius:15px;
	box-shadow:5px 5px 5px #ccc;
	transition:.5s;
}
#share .box ul li p{
	margin:20px auto;
	width:130px;
	height:30px;
	font-size: 20px;
	text-align:center;
	line-height:30px;
}




/*  动画 */
@keyframes handmove{
	from{
		top:70px;
		left:165px
	}
	to{
		top:60px;
		left:155px;
	}
}